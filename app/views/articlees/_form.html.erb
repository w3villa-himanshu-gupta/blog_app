<div class="container">
    <%= render "shared/errors" , obj: @articlee %>
        <div class="row justify-content-center ">
            <div class="col-10">
                <%= form_with scope: :articlee, url:articlees_path,class: "shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
            <div class= "form-group row">
                <%= f.label :title , class: "col-2 col-form-label text-light" %> 
                <div class="col-10">
                <%= f.text_field :title ,class: "form-control shadow rounded" ,placeholder: "Title of article"%>
                </div>
                </div><br>

                <div class= "form-group row">
                <%= f.label :description ,class: "col-2 col-form-label text-light" %> 
                <div class="col-10">

                <%= f.text_area :description,rows: 10,class: "form-control shadow rounded"  ,placeholder: "Description of article"%>
                </div>
                </div>
            
                <div class= "form-group row justify-content-center">
                <%= f.submit class: "btn btn-light btn-lg w-auto mt-4" %>
                </div>
                
                <% end %> 
            </div>
        
            <div class = "text-center mt-4 ">
            <%= link_to '[Cancel and return to Articles List ]' , articlees_path %> 
            </div>
      

        </div >


</div>

     