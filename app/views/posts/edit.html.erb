<%# <h2>Edit Post</h2>
 %>
 <div id="page-content">
<h1 class ="text-center mt-4">Create a new Post</h1>
<div class="container">
        <% if @post.errors.any? %>
        <h2>The following errors prevented the article from being saved</h2>
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
        <% end %>
        </ul>
        <% end %>
        <div class="row justify-content-center ">
            <div class="col-10">
        <%= form_with(model: @post,class: "shadow p-3 mb-3 bg-info rounded", local: true ) do |f| %>
    
                <div class= "form-group row">
                <%= f.label :name ,class: "col-2 col-form-label text-light" %> 
                <div class="col-10">

                <%= f.text_area :name,class: "form-control shadow rounded"  %>
                </div>
                </div>

       
        
                <div class= "form-group row justify-content-center">
                <%= f.submit class: "btn btn-light btn-lg w-auto mt-4" %>
                </div>

        <% end %>
        </div>

        <div class = "text-center mt-4 ">
            <%= link_to '[Cancel and return to Post List ]' , posts_path %> 
            </div>
        </div>
        </div>

</div>
